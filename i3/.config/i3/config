# enable/disable touchpad 
bindsym $mod+Ctrl+p exec synclient TouchpadOff=1
bindsym $mod+Ctrl+Shift+p exec synclient TouchpadOff=0

#- wifi connection
bindsym $mod+Shift+w exec xfce4-terminal -e nmtui

# moving workspaces between screens
bindsym $mod+n move workspace to output left

# activate double screen mode
bindsym $mod+Ctrl+d exec /home/aitor/.config/i3/doublescreen.sh
bindsym $mod+Ctrl+m exec /home/aitor/.config/i3/onlymonitor.sh 
bindsym $mod+Ctrl+l exec /home/aitor/.config/i3/onlylaptop.sh 

# open i3 configuration file 
bindsym $mod+c exec xfce4-terminal -e "vi /home/aitor/.config/i3/config"

# screenshot 
#bindsym --release Print exec scrot -e "/home/aitor/Pictures/Screenshots/screenshot_%Y%m%d_%H%M%S.png"
#bindsym --release Shift+Print exec scrot -s "/home/aitor/Pictures/Screenshots/screenshot_%Y%m%d_%H%M%S.png"
# sreenshots
bindsym Print exec --no-startup-id maim "/home/$USER/Pictures/$(date)"
bindsym $mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/$(date)"
bindsym Shift+Print exec --no-startup-id maim --select "/home/$USER/Pictures/$(date)"
# clipboard Screenshots
bindsym Ctrl+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

# ranger 
bindsym $mod+r exec xfce4-terminal -e ranger

# pulseaudio 
bindsym $mod+Shift+p exec pulseaudio


##################
# system control #
##################
set $Locker i3lock && sleep 1
set $mode_system (l)lock  (e)logout  (s)suspend  (h)hibernate  (r)reboot  (Shift+s)shutdown
bindsym $mod+Escape mode "$mode_system"
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# open thunar file manager
bindsym $mod+t exec thunar

###########
# startup #
###########
# set keyboard layout to spanish
exec_always --no-startup-id setxkbmap es
# load programs
#exec --no-startup-id alacritty 
exec --no-startup-id firefox
exec --no-startup-id obsidian
# set wallpaper
exec_always xsetroot -solid "#363d38"


########################
# workspace management #
########################
assign [class="Firefox"] $ws3
assign [class="qutebrowser"] $ws2
assign [class="Code"] $ws2
assign [class="Typora"] $ws4
assign [class="obsidian"] $ws9

#####################
# window management #
#####################
for_window [class="^.*"] border pixel 2
for_window [class="Firefox"] border pixel 0

#####################
# borders and focus #
#####################
default_border pixel 3
default_floating_border none
hide_edge_borders smart
# window setup
# colorshema
# class                 border  backgr. text    indicator
